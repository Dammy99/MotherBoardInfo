<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:rb="ms-appx:///Uno.Fonts.Roboto/Fonts/Roboto-Light.ttf">
    <Style x:Key="CustomFont">
        <Setter Property="TextElement.FontFamily" Value="Resources/Fonts/#WixMadeforDisplay-Regular"/>
        <Setter Property="TextElement.Foreground" Value="#8DF9D7"/>
    </Style>


    <Style x:Key="TitleStyle" TargetType="TextBlock" BasedOn="{StaticResource CustomFont}">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="60 0 0 0 "/>
        
    </Style>

    <Style x:Key="HeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource CustomFont}">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="60 0 0 0 "/>

    </Style>


    <Style x:Key="SimpleTextStyle" TargetType="TextBlock" BasedOn="{StaticResource CustomFont}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 0 0 20 "/>

    </Style>
</ResourceDictionary>